<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/gal_title"
        android:text="Anggap Aja Gallery"
        android:textSize="22sp"
        android:textStyle="bold"/>

    <ImageView
        android:id="@+id/imgGaller"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/gal_title"
        android:src="@drawable/image_1"/>

    <Button
        android:id="@+id/btnNext"
        android:layout_below="@id/imgGaller"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ganti Gambar Selanjutnya"
        android:onClick="nextImage"/>

    <Button
        android:id="@+id/btnPrev"
        android:layout_below="@id/imgGaller"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kembali ke Gambar Sebelumnya"
        android:onClick="previousImage"/>






</RelativeLayout>