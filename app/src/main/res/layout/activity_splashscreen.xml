<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

   <RelativeLayout
       android:id="@+id/splashBox"
       android:layout_width="fill_parent"
       android:layout_height="fill_parent"
       android:background="@color/green_900"
       android:layout_margin="20dp"
       android:padding="20dp"
       android:visibility="visible">

       <TextView
           android:id="@+id/splashTitle"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:textColor="@color/white"
           android:text="Splash Screen Header"
           android:textSize="24dp"/>

       <TextView
           android:id="@+id/splashMessage"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat."
           android:textColor="@color/white"
           android:layout_below="@id/splashTitle"
           android:paddingTop="20dp"
           android:textSize="16dp"/>

       <Button
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="GOT IT!"
           android:drawableLeft="@drawable/ic_android_black_24dp"
           android:layout_alignParentRight="true"
           android:layout_alignParentBottom="true"
           android:background="@color/light_green_600"
           android:onClick="dismissWelcome"/>

   </RelativeLayout>


    <LinearLayout
        android:id="@+id/contentBox"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:id="@+id/img1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_android_black_24dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"/>

        <TextView
            android:id="@+id/mainText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua."/>

    </LinearLayout>

</RelativeLayout>
